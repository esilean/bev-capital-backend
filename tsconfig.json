{
    "compilerOptions": {
        "target": "es2017",        
        "module": "es2015",        
        "moduleResolution": "node",        
        "outDir": "./dist",
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "lib": ["es5", "es6"],
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": true,
        "allowJs": true
    },
    "exclude": [
        "node_modules"
    ]
}